{
    "name": "Python Boston Dynamics Environment",
    "build": {
        "dockerfile": "Dockerfile",
        "context": ".."
    },
    "runArgs": ["--shm-size=2gb"],
    "features": {
        "ghcr.io/devcontainers/features/python:1": {
            "version": "3.11"
        }
    },
    "remoteUser": "root",
    "postCreateCommand": "python -m venv .venv && pip install -r requirements.txt",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance",
                "yzhang.markdown-all-in-one",
                "bierner.markdown-mermaid"
            ],
            "settings": {
                "python.defaultInterpreterPath": "/workspaces/PS9-Boston-Dynamic-Mobile-CV-Testing-Systems/.venv/bin/python",
                "python.pythonPath": "/workspaces/PS9-Boston-Dynamic-Mobile-CV-Testing-Systems/.venv/bin/python",
                "python.analysis.diagnosticSeverityOverrides": {
                    "reportUndefinedVariable": "none",
                    "reportMissingImports": "none",
                    "reportWildcardImportFromLibrary": "none"
                }
            }
        }
    }
}    
